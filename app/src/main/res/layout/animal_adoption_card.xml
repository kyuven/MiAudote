<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_adptAnimal"
    android:layout_width="140dp"
    android:layout_height="180dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp">

    <!-- Define uma área e a direção que os itens
                dentro dela irão seguir (vertical) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Imagem do Animal -->
        <ImageView
            android:id="@+id/imgAdpt_Animal"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@color/black"
            android:contentDescription="@string/img_animal_adocao" />

        <!-- Linear Layout da Cidade + UF -->
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <!-- Cidade -->
            <TextView
                android:id="@+id/txtAdpt_CdAnimal"
                android:layout_width="60dp"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="@string/cidade"
                android:textColor="@color/laranja01"
                android:textSize="8sp" />
            <!-- android:fontFamily="" -->

            <!-- UF -->
            <TextView
                android:id="@+id/txtAdpt_UfAnimal"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:text="@string/uf"
                android:textColor="@color/laranja01"
                android:textSize="8sp"
                android:textStyle="italic" />
            <!-- android:fontFamily="" -->

        </LinearLayout>

        <!-- Texto nome do animal adotado -->
        <TextView
            android:id="@+id/txtAdpt_nomeAnimal"
            android:layout_width="110dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="@string/nome_do_animal"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/marrom06"
            android:textSize="16sp"/>
        <!-- android:fontFamily="" -->

    </LinearLayout>

    <!-- Botão que redireciona a página com as informações do animal -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdpt_infoAnimal"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/btn_design"
        android:text="@string/saiba_mais"
        android:textSize="9sp"
        android:textColor="@color/white"/>

</androidx.cardview.widget.CardView>